@model IEnumerable<Products>

@{ 
    ViewData["Title"] = "List of Products";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.name
                                    @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                        <a class="text-white float-right mr-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-x-square"></i></a>
                                    }
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.imageURL" width="100%" alt="@item.name" />
                    </div>
                    <div class="col-md-6">
                        <p class="card-text">@item.description</p>
                        <p class="card-text"><b>Product Name: </b>@item.name</p>
                        <p class="card-text"><b>Category: </b>@item.ProductCategory</p>
                        <p class="card-text"><b>Stock: </b>@item.stockCode</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye-fill"></i>Show Details
                            </a>
                            <a class="btn btn-success text-white @((item.stockCode <= 0 ) ? "disabled" : "")" 
                                asp-controller="Orders" 
                                asp-action="AddItemToShoppingCart" 
                                asp-route-id="@item.Id">
                            <i class="bi bi-cart-plus"></i>Add to Cart (Price $@item.price.ToString("N"))</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Products")
