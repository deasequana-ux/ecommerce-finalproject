@model ApplicationUser

@{
    ViewData["Title"] = "Delete user";
}

<div class="row">
        <div class="col-md-8 offset-2">
            <div class="card mb-12">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    Are you sure you want to delete the user ?
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text"><b>User Email: </b>@Model.Email</p>
                            <p class="card-text"><b>User Name: </b>@Model.FullName</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Users">
                                Back to List
                            </a>
                            <div class="form-group p-0">
                            <form asp-action="Delete">
                                <input type="submit" value="Delete" class="btn btn-danger"/>
                            </form>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    
</div>


